{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build with GCC 12.3.0",
			"command": "C:\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"-std=c++20",
				"${workspaceFolder}\\*.cpp",
        		"${workspaceFolder}/Tools/*.cpp",
        	//	"${workspaceFolder}/Controler/*.cpp",
        		"${workspaceFolder}/GameElement/*.cpp",
        	//	"${workspaceFolder}/GameManager/*.cpp",
				"${workspaceFolder}/Renderizador/*.cpp",
				"-o",
				"${fileDirname}\\main.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\mingw64\\bin\\g++.exe"
		},
		{
			"type": "cppbuild",
			"label": "Build with Clang 16.0.4 ",
			"command": "C:\\mingw64\\bin\\clang++.exe",
			"args": [
				"-g",
				"-std=c++20",
				"${workspaceFolder}\\*.cpp",
        		"${workspaceFolder}/Tools/*.cpp",
        	//	"${workspaceFolder}/Controler/*.cpp",
        		"${workspaceFolder}/GameElement/*.cpp",
        	//	"${workspaceFolder}/GameManager/*.cpp",
				"${workspaceFolder}/Renderizador/*.cpp",
				"-o",
				"${fileDirname}\\main.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\mingw64\\bin\\clang++.exe"
		}
	]
}